<Page x:Class="Module3.Client.Presentation.Views.InputPassword.InputPasswordView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Height="1080" Width="1920"
      Loaded="InputPasswordView_OnLoaded">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <StackPanel>
            <TextBlock Text="ВВОД НОВОГО ПАРОЛЯ" FontSize="75" FontWeight="Bold" 
                       TextAlignment="Center" />
            <TextBlock Text="Введите данные для установки нового пароля" FontSize="55"
                       TextAlignment="Center" />
        </StackPanel>
          
        <StackPanel Margin="0 30 0 0">
            <TextBlock Text="Новый Пароль" FontSize="45" />
            <PasswordBox x:Name="NewPasswordTxt" Height="50" FontSize="35" KeyboardNavigation.TabIndex="2" />
        </StackPanel>
          
        <StackPanel Margin="0 30 0 0">
            <TextBlock Text="Подтвердите новый пароль" FontSize="45" />
            <PasswordBox x:Name="RepeatNewPasswordTxt" Height="50" FontSize="35" KeyboardNavigation.TabIndex="3" />
        </StackPanel>
          
        <StackPanel Margin="0 100 0 0">
            <Button x:Name="InputPasswordBtn" Content="СОХРАНИТЬ" Width="700" Height="100" KeyboardNavigation.TabIndex="4"
                    FontSize="50" Click="InputPasswordBtn_OnClick"/>
        </StackPanel>
    </StackPanel>
</Page>
